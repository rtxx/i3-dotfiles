*fastScroll: true
*selectToClipboard: true

*renderFont: true
*faceName: Fantasque Sans Mono
*faceSize: 14
*internalBorder: 24

URxvt*font: xft:FantasqueSansMono-Regular:size=14
URxvt*letterSpace: -1
URxvt*scrollBar: False
! URxvt.transparent: true
! URxvt.shading: 10
! Urxvt*depth: 32

! https://superuser.com/questions/564393/get-ctrlarrow-to-work-under-tmuxurxvt
! URxvt will now send the same escape sequences as XTerm.
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! https://wiki.archlinux.org/title/Rxvt-unicode#Cut_and_paste
! URxvt will now copy/paste with Alt-Control-c/v
! to copy selected text automatically use
! URxvt.perl-ext-common: ... , selection-to-clipboard, ...
URxvt.perl-ext-common: clipboard,config-reload
URxvt.keysym.Alt-Control-c: perl:clipboard:copy
URxvt.keysym.Alt-Control-v: perl:clipboard:paste


